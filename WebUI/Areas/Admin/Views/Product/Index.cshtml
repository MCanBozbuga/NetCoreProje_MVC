@model List<ProductDetailDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DasboardLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Product List</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a asp-action="Create" asp-controller="Product" asp-area="Admin" class="btn btn-success">New Product</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-success table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>PRODUCT NAME</th>
                            <th>CATEGORY NAME</th>
                            <th>DESCRIPTION</th>
                            <th>UNIT PRICE</th>
                            <th>Status</th>
                            <th>UPDATE / DELETE</th>                        
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Count > 0)
                            {
                                foreach (var product in Model)
                                {
                                                <tr>
                                                    <td>@product.ProductId</td>
                                                    <td>@product.ProductName</td>
                                                    <td>@product.CategoryName</td>
                                                   <td>@product.Description</td>
                                                    <td>@product.UnitPrice</td>
                                                    @{
                                                        switch (product.Status)
                                                        {
                                                            case Core.Entities.Enum.DataStatus.Inserted:
                                                                break;
                                                            case Core.Entities.Enum.DataStatus.Updated:
                                                                break;
                                                            case Core.Entities.Enum.DataStatus.Deleted:
                                                                break;
                                                            default:
                                                                break;
                                                        }
                                                    }
                                                    <td>
                                                       INSERTED
                                                    </td>
                                                    <td>
                                                        <a asp-action="Update" asp-controller="Product" asp-route-id="@product.ProductId" class="btn btn btn-warning">update</a>
                                                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.ProductId" class="btn btn btn-danger">delete</a>
                                                    </td>
                                                </tr>
                                }
                            }


                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>