@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DasboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Product Details</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>PRODUCT NAME</label>
                        <input asp-for="ProductName" type="text" class="form-control" placeholder="Enter product name">
                    </div>
                    <div class="form-group">
                        <label>DESCRIPTION</label>
                        <input asp-for="Description" type="text" class="form-control" placeholder="Enter product description">
                    </div>
                    <div class="form-group">
                        <label>UNITS IN STOCK</label>
                        <input asp-for="UnitsInStock" type="number" class="form-control" placeholder="Enter product UnitsInStock">
                    </div>
                    <div class="form-group">
                        <label>UNIT PRICE</label>
                        <input asp-for="UnitPrice" type="number" class="form-control" placeholder="Enter product UnitPrice">
                    </div>
                    <div class="form-group">
                        <label>CATEGORY ID</label>
                        <input asp-for="Category.Id" type="text" class="form-control" placeholder="Enter category id">
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                </div>
            </form>
        </div>
        <!-- /.card -->

    </div>
</div>

