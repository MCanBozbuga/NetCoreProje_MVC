@model List<CategoryDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DasboardLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Category List</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-success">New Category</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-danger table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>CATEGORY NAME</th>
                            <th>PRODUCT NAME</th>
                            <th>DESCRIPTION</th>
                            <th>STATUS</th>
                            <th>TOTAL PRODUCT</th>
                            <th>CREATE DATE</th>
                            <th>UPDATE DATE</th>
                            <th>UPDATE / DELETE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Count > 0)
                            {
                                foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.CategoryId</td>
                                        <td>@category.CategoryName</td>
                                        <td>@category.ProductName</td>
                                        <td>@category.Description</td>
                                        <td>@category.Status</td>
                                        @*@{
                                            switch (category.Status)
                                            {
                                                case Core.Entities.Enum.DataStatus.Inserted:
                                                    break;
                                                case Core.Entities.Enum.DataStatus.Updated:
                                                    break;
                                                case Core.Entities.Enum.DataStatus.Deleted:
                                                    break;
                                                default:
                                                    break;
                                            }
                                        }
                                        <td>
                                            INSERTED
                                        </td>*@
                                        <td>@category.UnitsInStock</td>
                                        <td>@category.CreateDate</td>
                                        <td>@category.DeleteData</td>
                                        <td>
                                            <a asp-action="Update" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-warning">update</a>
                                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn btn-danger">delete</a>
                                        </td>
                                    </tr>
                                }
                            }


                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>