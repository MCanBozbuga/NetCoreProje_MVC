@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<div id="deneme">
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {

            <li class="nav-item">
                <a class="nav-link text-warning" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">HELLO :) @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
                </form>
            </li>
            


        }
        else
        {
            <li id="basliklar" class="nav-item">
                <i><b><a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">REGISTER</a></b></i>
            </li>
            <li id="basliklar" class="nav-item">
                <i><b><a class="btn btn-success ml-2" asp-area="Identity" asp-page="/Account/Login">LOGIN</a></b></i>
            </li>
            

        }
    </ul>
</div>

