@model List<ProductDetailDto>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->

                        <div class="badge bg-primary text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                            @product.CategoryName
                        </div>

                        <!-- Product image-->
                        <img class="card-img-top" src="@product.ImagePath" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.ProductName</h5>

                                <!-- Product price-->

                                <span>@product.UnitPrice $</span>
                                <p>Stok Adet: @product.UnitsInStock</p>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@product.ProductId" class="btn btn-outline-dark mt-auto">Add To Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

